<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTextArea?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="massagePane" prefHeight="140.0" style="-fx-background-color: lightgray;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="massage" layoutX="14.0" layoutY="41.0" text="massage" wrapText="true" />
      <ImageView fx:id="trash" fitHeight="17.0" fitWidth="22.0" layoutX="14.0" layoutY="12.0" onMouseClicked="#deleteMassage" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/waste.png" />
         </image>
      </ImageView>
      <ImageView fx:id="pen" fitHeight="17.0" fitWidth="17.0" layoutX="37.0" layoutY="12.0" onMouseClicked="#edit" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/edit.png" />
         </image>
      </ImageView>
      <ImageView fx:id="ce" fitHeight="17.0" fitWidth="17.0" layoutX="178.0" layoutY="62.0" onMouseClicked="#confirmEdit" pickOnBounds="true" preserveRatio="true" visible="false">
         <image>
            <Image url="@../images/confirm.png" />
         </image>
      </ImageView>
      <JFXTextArea fx:id="editField" focusColor="#1c1194" layoutY="77.0" prefHeight="50.0" prefWidth="200.0" promptText="new text" unFocusColor="#1c1194" visible="false" />
      <Label fx:id="date" layoutX="86.0" layoutY="12.0" text="date" wrapText="true" />
   </children>
</AnchorPane>
